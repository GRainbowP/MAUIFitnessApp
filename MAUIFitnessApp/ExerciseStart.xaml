                            <Label Text="8" FontAttributes="Bold" FontSize="Title" TextColor="Gray" HorizontalOptions="Center"/>
                            <Label Text="Reps" FontAttributes="Bold" FontSize="Title" TextColor="Gray" HorizontalOptions="Center" />
                        </VerticalStackLayout>
                        <Label Margin="5" Grid.Row="0" Grid.Column="2" Text="+" FontAttributes="Bold" FontSize="Title" TextColor="Gray" VerticalOptions="Center" HorizontalOptions="End" />
                    </Grid>
                </Border>

                <Label Grid.Row="6" Grid.Column="0" Margin="0,10,0,0" Text="Set 2" TextColor="Black" />
                <Border Margin="5" Grid.Row="6" Grid.Column="3" Stroke="#F58C8C" HorizontalOptions="End">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    <Label Text="🗑️" Padding="5" TextColor="#F58C8C" BackgroundColor="Transparent" />
                </Border>
                <Border Grid.Row="7" Grid.ColumnSpan="2" Margin="5" Stroke="Transparent" BackgroundColor="White">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Label Margin="5" Grid.Row="0" Grid.Column="0" Text="-" FontAttributes="Bold" FontSize="Title" TextColor="Gray" VerticalOptions="Center" />
