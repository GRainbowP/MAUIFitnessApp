                        </VerticalStackLayout>
                        <Label Margin="5" Grid.Row="0" Grid.Column="2" Text="+" FontAttributes="Bold" FontSize="Title" TextColor="Gray" VerticalOptions="Center" HorizontalOptions="End" />
                    </Grid>
                </Border>
                <Border Grid.Row="7" Grid.Column="2" Grid.ColumnSpan="2" Margin="5" Stroke="Transparent" BackgroundColor="White">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
