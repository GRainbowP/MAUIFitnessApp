                        <Label Margin="5" Grid.Row="0" Grid.Column="2" Text="+" FontAttributes="Bold" FontSize="Title" TextColor="Gray" VerticalOptions="Center" HorizontalOptions="End" />
                    </Grid>
                </Border>
                <Border Grid.Row="9" Grid.Column="2" Grid.ColumnSpan="2" Margin="5" Stroke="Transparent" BackgroundColor="White">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Label Margin="5" Grid.Row="0" Grid.Column="0" Text="-" FontAttributes="Bold" FontSize="Title" TextColor="Gray" VerticalOptions="Center" />
                        <VerticalStackLayout Grid.Row="0" Grid.Column="1">
                            <Label Text="10" FontAttributes="Bold" FontSize="Title" TextColor="Gray" HorizontalOptions="Center"/>
                            <Label Text="Reps" FontAttributes="Bold" FontSize="Title" TextColor="Gray" HorizontalOptions="Center" />
                        </VerticalStackLayout>
                        <Label Margin="5" Grid.Row="0" Grid.Column="2" Text="+" FontAttributes="Bold" FontSize="Title" TextColor="Gray" VerticalOptions="Center" HorizontalOptions="End" />
                    </Grid>
                </Border>

                <Border Margin="5" Grid.Row="10" Grid.ColumnSpan="4" Stroke="Black">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    <Button Text="✚ Add Set" TextColor="Black" BackgroundColor="Transparent" />
                </Border>

                <Border Margin="5" Grid.Row="11" Grid.ColumnSpan="4" Stroke="#5AD398">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    <Button Text="✓ Mark As Complete" TextColor="#5AD398" BackgroundColor="Transparent" />
                </Border>
            </Grid>
        </Border>
    </VerticalStackLayout>
</ContentPage>