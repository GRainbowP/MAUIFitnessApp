<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUIFitnessApp.WorkoutExercise"
             BackgroundColor="White">
    <VerticalStackLayout>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Border Stroke="Transparent" HorizontalOptions="Start">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="32"/>
                </Border.StrokeShape>
                <Button Clicked="BackButton" Grid.Column="0" Grid.Row="0" Text="&lt;-" HorizontalOptions="Start" FontSize="Medium" FontAttributes="Bold" TextColor="White" Background="#D4D4D4"/>
            </Border>
            <Label Grid.Column="1" Grid.Row="0" Text="Workout" TextColor="Black" FontSize="Title" VerticalOptions="Center" HorizontalOptions="Center" />
        </Grid>

        <VerticalStackLayout Margin="0,10,0,10" Spacing="10">
            <Label Text="At-Home Circuit" FontSize="Subtitle" FontAttributes="Bold" Padding="10,0,10,0" TextColor="#71D9A6"  HorizontalOptions="Center"/>
            <Label Text="🎯Targets Full body" TextColor="Black" HorizontalOptions="Center"/>
            <Label Text="🕓60 mins" TextColor="Black" HorizontalOptions="Center"/>
            <Label Text="☆You haven't done this yet!" TextColor="Black" HorizontalOptions="Center"/>
            <Button Clicked="StartWorkoutButton" Margin="10" Text="▶ Start Workout" BackgroundColor="#5AD499" TextColor="White" FontSize="Subtitle" />
        </VerticalStackLayout>

        <Label Margin="5" Text="Exercises In This Workout" FontSize="Subtitle" FontAttributes="Bold" Padding="10,0,10,0" TextColor="Black" />

        <Border Margin="5" Stroke="Transparent" BackgroundColor="#E5D8FB" HorizontalOptions="Fill" Padding="20,10,20,10">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="24"/>
            </Border.StrokeShape>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label Grid.Row="0" Grid.Column="0" Text="Skipping Rope" FontSize="Subtitle" FontAttributes="Bold" HorizontalOptions="Start" TextColor="Black"/>
                <HorizontalStackLayout Grid.Row="1" Grid.ColumnSpan="3" HorizontalOptions="Start">
                    <Border Margin="0,5,5,5" Stroke="Transparent" BackgroundColor="#7A39EB" HorizontalOptions="Start">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="32"/>
                        </Border.StrokeShape>
                        <Label Text="1 sets" Padding="10,0,10,0" TextColor="White" />
                    </Border>
                    <Border Margin="0,5,5,5" Stroke="Transparent" BackgroundColor="#7A39EB" HorizontalOptions="Start">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="32"/>
                        </Border.StrokeShape>
                        <Label Text="1 reps" Padding="10,0,10,0" TextColor="White" />
                    </Border>
                    <Border Margin="5" Stroke="Transparent" BackgroundColor="#5AD398" HorizontalOptions="Start">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="32"/>
                        </Border.StrokeShape>
                        <Label Text="10 mins" Padding="10,0,10,0" TextColor="White" />
                    </Border>
                </HorizontalStackLayout>
                <Label Grid.Row="2" Grid.Column="0" Text="🎯Targets Cardiovascular system" TextColor="Black" />
                <Label Grid.Row="3" Grid.Column="0" Text="Equipment: Skipping rope" TextColor="Black" />
                <Label Grid.Row="4" Grid.Column="0" Margin="0,10,0,0" Text="ℹ️ Tap to see guidance" FontAttributes="Bold" TextColor="Black" />
                <Button Clicked="StartWorkoutButton" Grid.Column="3" Grid.RowSpan="5" Text=">" FontSize="Large" FontAttributes="Bold" TextColor="#747387" Background="Transparent" HorizontalOptions="EndAndExpand"/>
            </Grid>
        </Border>

        <Border Margin="5" Stroke="Transparent" BackgroundColor="#E5D8FB" HorizontalOptions="Fill" Padding="20,10,20,10">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="24"/>
            </Border.StrokeShape>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label Grid.Row="0" Grid.Column="0" Text="Push-ups" FontSize="Subtitle" FontAttributes="Bold" HorizontalOptions="Start" TextColor="Black"/>
                <HorizontalStackLayout Grid.Row="1" Grid.ColumnSpan="3" HorizontalOptions="Start">
                    <Border Margin="0,5,5,5" Stroke="Transparent" BackgroundColor="#7A39EB" HorizontalOptions="Start">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="32"/>
                        </Border.StrokeShape>
                        <Label Text="3 sets" Padding="10,0,10,0" TextColor="White" />
                    </Border>
                    <Border Margin="0,5,5,5" Stroke="Transparent" BackgroundColor="#7A39EB" HorizontalOptions="Start">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="32"/>
                        </Border.StrokeShape>
                        <Label Text="8-12 reps" Padding="10,0,10,0" TextColor="White" />
                    </Border>
                    <Border Margin="5" Stroke="Transparent" BackgroundColor="#5AD398" HorizontalOptions="Start">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="32"/>
                        </Border.StrokeShape>
                        <Label Text="10 mins" Padding="10,0,10,0" TextColor="White" />
                    </Border>
                </HorizontalStackLayout>
                <Label Grid.Row="2" Grid.Column="0" Text="🎯Targets Chest, Triceps" TextColor="Black" />
                <Label Grid.Row="3" Grid.Column="0" Margin="0,10,0,0" Text="ℹ️ Tap to see guidance" FontAttributes="Bold" TextColor="Black" />
                <Button Clicked="StartWorkoutButton" Grid.Column="3" Grid.RowSpan="4" Text=">" FontSize="Large" FontAttributes="Bold" TextColor="#747387" Background="Transparent" HorizontalOptions="EndAndExpand"/>
            </Grid>
        </Border>

        <Border Margin="5" Stroke="Transparent" BackgroundColor="#E5D8FB" HorizontalOptions="Fill" Padding="20,10,20,10">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="24"/>
            </Border.StrokeShape>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label Grid.Row="0" Grid.Column="0" Text="Lunges" FontSize="Subtitle" FontAttributes="Bold" HorizontalOptions="Start" TextColor="Black"/>
                <HorizontalStackLayout Grid.Row="1" Grid.ColumnSpan="3" HorizontalOptions="Start">
                    <Border Margin="0,5,5,5" Stroke="Transparent" BackgroundColor="#7A39EB" HorizontalOptions="Start">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="32"/>
                        </Border.StrokeShape>
                        <Label Text="3 sets" Padding="10,0,10,0" TextColor="White" />
                    </Border>
                    <Border Margin="0,5,5,5" Stroke="Transparent" BackgroundColor="#7A39EB" HorizontalOptions="Start">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="32"/>
                        </Border.StrokeShape>
                        <Label Text="12 each leg reps" Padding="10,0,10,0" TextColor="White" />
                    </Border>
                    <Border Margin="5" Stroke="Transparent" BackgroundColor="#5AD398" HorizontalOptions="Start">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="32"/>
                        </Border.StrokeShape>
                        <Label Text="10 mins" Padding="10,0,10,0" TextColor="White" />
                    </Border>
                </HorizontalStackLayout>
                <Label Grid.Row="2" Grid.Column="0" Text="🎯Targets Legs, Glutes" TextColor="Black" />
                <Label Grid.Row="3" Grid.Column="0" Margin="0,10,0,0" Text="ℹ️ Tap to see guidance" FontAttributes="Bold" TextColor="Black" />
                <Button Clicked="StartWorkoutButton" Grid.Column="3" Grid.RowSpan="4" Text=">" FontSize="Large" FontAttributes="Bold" TextColor="#747387" Background="Transparent" HorizontalOptions="EndAndExpand"/>
            </Grid>
        </Border>

    </VerticalStackLayout>
</ContentPage>