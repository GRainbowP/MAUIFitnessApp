<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUIFitnessApp.MainPage"
             BackgroundImageSource="gym.jpg">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label Text="Choose your AI Coach" HorizontalOptions="Center" FontSize="Title"/>

            <Border Stroke="Red" HorizontalOptions="Center">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="12"/>
            </Border.StrokeShape>
                <Grid>
                    <Image Source="gym.jpg" Aspect="AspectFill" MaximumHeightRequest="100"/>
                    <HorizontalStackLayout HorizontalOptions="Center">
                        <VerticalStackLayout>
                            <Label Text="🧍Slim Seeker" FontSize="Subtitle" HorizontalOptions="Start"/>
                            <Label Text="Achieve a slimmer look" HorizontalOptions="Start"/>
                        </VerticalStackLayout>
                        <Button Text=">" HorizontalOptions="End" FontSize="Medium" FontAttributes="Bold" Background="Transparent"/>
                    </HorizontalStackLayout>
                </Grid>
            </Border>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
